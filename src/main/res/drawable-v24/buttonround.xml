<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/eucalyptus" />

            <solid android:color="#FFFFFF" />

            <corners android:radius="360dp" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />
            
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#D9D7D7" />

            <solid android:color="#D9D7D7" />

            <corners android:radius="360dp" />

            <padding android:bottom="5dp" android:left="7dp" android:right="7dp" android:top="5dp" />

        </shape>

    </item>
</selector>